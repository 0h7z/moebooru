<?xml version="1.0" encoding="UTF-8"?>
<posts count="<%= @posts.total_entries %>" offset="<%= (@posts.current_page - 1) * @posts.per_page %>">
<%= content_tag :posts, count: @posts.total_entries, offset: ((@posts.current_page - 1) * @posts.per_page) do %>
  <% @posts.each do |post| %>
    <%= tag :post, post.api_attributes %>
  <% end %>
<% end %>
