<h2><%=t :forum_new_text %></h2>

<div style="margin: 1em 0;">
  <div id="preview" class="response-list" style="display: none;">
  </div>

  <div id="reply" style="clear: both;">
    <%= form_tag({:action => "create"}) do %>
      <%= hidden_field "forum_post", "parent_id", :value => params["parent_id"] %>
      <table>
        <tr>
          <td><label for="forum_post_title"><%=t :forum_title %></label></td>
          <td><%= text_field "forum_post", "title", :size => 60 %></td>
        </tr>
        <tr>
          <td colspan="2"><%= text_area "forum_post", "body", :rows => 20, :cols => 80 %></td>
        </tr>
        <tr>
          <td colspan="2"><%= submit_tag t(:forum_post) %><%= submit_to_remote "preview", t(:forum_preview), :url => {:action => "preview"}, :update => "preview", :success => "$('preview').show()" %></td>
        </tr>
      </table>
    <% end %>
  </div>

</div>

<% content_for :subnavbar do %>
  <li><%= link_to t(:forum_list), :action => "index" %></li>
  <li><%= link_to t(:forum_help), :controller => "help", :action => "forum" %></li>
<% end %>

<script type="text/javascript">
  $("forum_post_title").focus();
</script>
