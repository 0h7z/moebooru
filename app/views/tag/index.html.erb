<div>
  <%= form_tag({:action => "index"}, :method => :get) do %>
    <table class="form">
      <tbody>
        <tr>
          <th width="15%">
            <label for="name">Name</label>
            <p>Use * as a wildcard.</p>
          </th>
          <td width="85%"><%= text_field_tag "name", params[:name], :size => 40 %></td>
        </tr>
        <tr>
          <th><label for="type">Type</label></th>
          <td><%= select_tag "type", options_for_select([["Any", ""], *CONFIG["tag_types"].keys.select {|x| x =~ /^[A-Z]/}.inject([]) {|all, x| all << [x, CONFIG["tag_types"][x]]}],
                                                          [(params[:type].blank?) && "" || params[:type].to_i()]) %></td>
        </tr>
        <tr>
          <th><label for="order">Order</label></th>
          <td><%= select_tag "order", options_for_select([["Name", "name"], ["Count", "count"], ["Date", "date"]],
                                                         [params[:order] || ""]) %></td>
        </tr>
      </tbody>
      <tfoot>
        <tr>
          <td><%= submit_tag "Search" %></td>
          <td></td>
        </tr>
      </tfoot>
    </table>
  <% end %>
</div>

<table width="100%" class="highlightable">
  <thead>
    <tr>
      <th width="60px">Posts</th>
      <th>Name</th>
      <th width="200px">Type</th>
      <th width="120px" colspan="2">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @tags.each do |tag| %>
      <tr class="<%= cycle 'even', 'odd' %>">
        <td align="right"><%= tag['post_count'] %></td>
        <td class="tag-type-<%= tag.type_name %>">
          <%= link_to '?', :controller => :wiki, :action => :show, :title => tag['name'] %>
          <%= link_to tag['name'], :controller => :post, :action => :index, :tags => tag['name'] %>
        </td>
        <td><%= tag.type_name + (tag['is_ambiguous'] ? ", ambiguous" : "") %></td>
        <td width="60px"><%= link_to 'Edit', :action => 'edit', :id => tag['id'] %></td>
        <td width="60px"><%= link_to 'History', :controller => :history, :search => "tag:#{tag['id']}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div id="paginator">
  <%= will_paginate(@tags) %>
</div>

<%= render :partial => "footer" %>
