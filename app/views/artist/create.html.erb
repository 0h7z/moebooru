<div id="artist-create">
  <p><%=t :artist_create %></p>

  <%= form_tag({:action => "create"}, :level => :member) do %>
    <table class="form">
      <tr>
        <th><label for="artist_name"><%=t :artist_name %></label></th>
        <td><%= text_field "artist", "name", :size => 80 %></td>
      </tr>
      <% if params[:alias_id] %>
        <tr>
          <th><label for="artist_alias_name"><%=t :artist_alias_for %></label></th>
          <td><%= text_field "artist", "alias_name", :size => 80 %></td>
        </tr>
      <% end %>
      <tr>
        <th><label for="artist_alias_names"><%=t :artist_aliases %></label</th>
        <td><%= text_field "artist", "alias_names", :size => 80, :value => params[:jp_name] %></td>
      </tr>
      <tr>
        <th><label for="artist_member_names"><%=t :artist_members %></label></th>
        <td><%= text_field "artist", "member_names", :size => 80 %></td>
      </tr>
      <tr>
        <th><label for="artist_urls"><%=t :artist_urls %></label></th>
        <td><%= text_area "artist", "urls", :size => "80x6", :class => "no-block" %></td>
      </tr>
      <tr>
        <th><label for="artist_notes"><%=t :artist_notes %></label></th>
        <td><%= text_area "artist", "notes", :size => "80x6", :class => "no-block" %></td>
      </tr>
      <tr>
        <td colspan="2"><%= submit_tag t(:artist_save) %> <%= button_to_function t(:artist_cancel), "history.back()" %></td>
      </tr>
    </table>
  <% end %>
</div>

<%= render :partial => "footer" %>
