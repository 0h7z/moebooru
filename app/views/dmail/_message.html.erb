<div class="message">
  <% if message.to_id == @current_user.id %>
    <h5 class="received"><%= h(message.title) %></h5>
  <% else %>
    <h5 class="sent"><%= h(message.title) %></h5>
  <% end %>

  <div style="margin-bottom: 1em;">
    <em><%=t :dmail_message_sent %><%= link_to h(message.from.name), :controller => "user", :action => "show", :id => message.from_id %> <%= time_ago_in_words(message.created_at) %><%=t :dmail_message_ago %></em>
  </div>

  <div style="width: 50em;">
    <%= format_text(message.body) %>
  </div>
</div>
