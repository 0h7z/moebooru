<div id="user-index">
  <% if @current_user.is_anonymous? %>
    <h2><%=t :user_home %></h2>

    <ul class="link-page">
      <li><%= link_to t(:user_home2), :action => "login" %></li>
      <% if CONFIG["enable_signups"] %>
        <li><%= link_to t(:user_home3), :action => "signup" %></li>
      <% else %>
        <li><%=t :user_home4 %></li>
      <% end %>
      <li><%= link_to t(:user_home5), :action => "reset_password" %></li>
    </ul>
  <% else %>
    <h2><%=t :user_home6 %><%= h(@current_user.name) %>!</h2>
    <p><%=t :user_home7 %></p>

    <div class="section">
      <ul class="link-page">
        <li><%= link_to t('.logout'), :action => "logout" %></li>
        <li><%= link_to t('.my_profile'), :action => "show", :id => @current_user.id %></li>
        <li><%= link_to t('.my_mail'), :controller => "dmail", :action => "inbox" %></li>
        <li><%= link_to t('.my_favorites'), :controller => "post", :action => "index", :tags => "vote:3:#{@current_user.name} order:vote" %></li>
        <li><%= link_to t('.settings'), :action => "edit" %></li>
        <li><%= link_to t('.change_password'), :action => "change_password" %></li>
      </ul>
    </div>

    <% if @current_user.is_janitor_or_higher? %>
      <div>
        <h4><%=t :user_home14 %></h4>
        <ul class="link-page">
          <li><%= link_to t(:user_home15), :action => "invites" %></li>
          <% if @current_user.is_mod_or_higher? %>
            <li><%= link_to t(:user_home16), :action => "show_blocked_users" %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <% end %>
</div>

<%= render :partial => "footer" %>
