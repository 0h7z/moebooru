<div id="user-index">
  <% if @current_user.is_anonymous? %>
    <h2>You are not logged in.</h2>

    <ul class="link-page">
      <li><%= link_to "» Login", :action => "login" %></li>
      <% if CONFIG["enable_signups"] %>
        <li><%= link_to "» Sign Up", :action => "signup" %></li>
      <% else %>
        <li>Signups are disabled</li>
      <% end %>
      <li><%= link_to "» Reset Password", :action => "reset_password" %></li>
    </ul>
  <% else %>
    <h2>Hello <%= h(@current_user.name) %>!</h2>
    <p>From here you can access account-specific options and features.</p>

    <div class="section">
      <ul class="link-page">
        <li><%= link_to "» Logout", :action => "logout" %></li>
        <li><%= link_to "» My Profile", :action => "show", :id => @current_user.id %></li>
        <li><%= link_to "» My Mail", :controller => "dmail", :action => "inbox" %></li>
        <li><%= link_to "» My Favorites", :controller => "post", :action => "index", :tags => "vote:3:#{@current_user.name} order:vote" %></li>
        <li><%= link_to "» Settings", :action => "edit" %></li>
        <li><%= link_to "» Change Password", :action => "change_password" %></li>
      </ul>      
    </div>

    <% if @current_user.is_janitor_or_higher? %>
      <div>
        <h4>Moderator Tools</h4>
        <ul class="link-page">
          <li><%= link_to "» Invites", :action => "invites" %></li>
          <% if @current_user.is_mod_or_higher? %>
            <li><%= link_to "» Blocked Users", :action => "show_blocked_users" %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <% end %>
</div>

<%= render :partial => "footer" %>
